<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/pm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pm"
            android:scaleType="centerInside"
            android:src="@drawable/ic_person_black_48x48" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/pm"
            android:gravity="start|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/pm"
                android:text="Mã SV"
                android:textColor="@color/red"
                android:textSize="@dimen/stext_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên nhân viên"
                android:textSize="@dimen/ntext_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_depart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phòng ban"
                android:textSize="@dimen/stext_size" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_dlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_margin="@dimen/pm"
            android:background="@drawable/custom_button_red"
            android:src="@drawable/ic_delete_white_36x36" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/pm"
        android:background="@color/black" />
</LinearLayout>